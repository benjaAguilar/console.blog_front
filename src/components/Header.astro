---
import { HeaderBtns } from './common/HeaderBtns'
import es from'../data/es.json'
import en from'../data/en.json'
import { HeaderMenu } from './common/HeaderMenu';

let lang = en;

const url = Astro.url.pathname;
if(url.includes("/es")){
    lang = es;
}
---

<header class="flex justify-between items-center p-5" style="background-color: var(--col-black); background-image: var(--noise);">
    <a href={url.includes('/es') ? '/es' : '/'} class="text-4xl font-[yellowhouse] text-amber-500">Console Blog</a>
    <div class="flex gap-4 btnsBox">
        <HeaderBtns translations={lang.HeaderBtns} client:load />
    </div>
    <div class="menu">
        <HeaderMenu translations={lang.HeaderBtns} client:load />
    </div>
</header>

<style>
    .menu{
        display: none;
    }

    @media (max-width: 700px){
        .btnsBox{
            display: none;
        }
        .menu{
            display: block;
        }
    }
</style>
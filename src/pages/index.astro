---
import { CategoriesShowcase } from '../components/common/categoriesShowcase';
import { PostsShowcase } from '../components/common/PostsShowcase';
import Layout from '../layouts/Layout.astro';

const category = Astro.url.searchParams.get('category');
---

<Layout>
	<div class="flex flex-col gap-6">
		<h1 class="text-2xl mt-6">El devblog de ColorCode!</h1>
		<CategoriesShowcase client:load />
		<PostsShowcase param={category} client:load/>
	</div>
</Layout>
